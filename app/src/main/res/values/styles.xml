<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorFpFooter</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FpLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/fp_label_size</item>
        <item name="android:textColor">@color/idemia_purple</item>
    </style>
    <style name="FpLabelResponse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/fp_label_response_size</item>
        <item name="android:textColor">@color/idemia_purple</item>
    </style>

    <style name="contactReadersButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:background">@drawable/button_round_corner</item>
    </style>

</resources>
